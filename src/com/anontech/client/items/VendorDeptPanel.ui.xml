<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:my='urn:import:com.anontech.client.items'
	xmlns:f="urn:import:com.anontech.client.find">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:DecoratedTabPanel width="824px" height="323px"
			ui:field="tabPanel">
			<g:Tab text="Vendors">
				<g:AbsolutePanel>
					<f:SearchPanel search="VENDOR" />
				</g:AbsolutePanel>
			</g:Tab>
			<g:Tab text="Add Vendor">
				<g:AbsolutePanel>
					<my:AddVendor />
				</g:AbsolutePanel>
			</g:Tab>
			<g:Tab text="Departments">
				<g:AbsolutePanel>
					<f:SearchPanel search="DEPARTMENT"/>
				</g:AbsolutePanel>
			</g:Tab>
			<g:Tab text="Add Department">
				<g:AbsolutePanel>
					<my:AddDepartment />
				</g:AbsolutePanel>
			</g:Tab>
		</g:DecoratedTabPanel>
	</g:HTMLPanel>
</ui:UiBinder> 